  <admin_templates>
    <template title="tinhte_xentag_tag_delete"><![CDATA[<xen:title>{xen:phrase tinhte_xentag_tag_confirm_deletion}: {$tag.tag_text}</xen:title>
<xen:h1>{xen:phrase tinhte_xentag_tag_confirm_deletion}</xen:h1>

<xen:navigation>
	<xen:breadcrumb href="{xen:adminlink 'xentag-tags/edit', $tag}">{$tag.tag_text}</xen:breadcrumb>
</xen:navigation>

<xen:require css="delete_confirmation.css" />

<xen:form action="{xen:adminlink 'xentag-tags/delete', $tag}" class="deleteConfirmForm formOverlay">

	<p>{xen:phrase tinhte_xentag_tag_please_confirm}:</p>
	<strong><a href="{xen:adminlink 'xentag-tags/edit', $tag}">{$tag.tag_text}</a></strong>

	<xen:submitunit save="{xen:phrase tinhte_xentag_tag_delete}" />
	
	<input type="hidden" name="_xfConfirm" value="1" />
</xen:form>]]></template>
    <template title="tinhte_xentag_tag_edit"><![CDATA[<xen:title>{xen:if '{$tag.tag_id}', '{xen:phrase tinhte_xentag_tag_edit}', '{xen:phrase tinhte_xentag_tag_add}'}</xen:title>

<xen:form action="{xen:adminlink 'xentag-tags/save'}" class="AutoValidator" data-redirect="yes">

	
	<xen:textboxunit label="{xen:phrase tinhte_xentag_tag_text}:" name="tag_text" value="{$tag.tag_text}" data-liveTitleTemplate="{xen:if {$tag.tag_id},
		'{xen:phrase tinhte_xentag_tag_edit}: <em>%s</em>',
		'{xen:phrase tinhte_xentag_tag_add}: <em>%s</em>'}" />
	<xen:textboxunit label="{xen:phrase tinhte_xentag_created_date}:" name="created_date" value="{$tag.created_date}" />
	<xen:textboxunit label="{xen:phrase tinhte_xentag_created_user_id}:" name="created_user_id" value="{$tag.created_user_id}" />

	<xen:submitunit save="{xen:phrase tinhte_xentag_tag_save}">
		<input type="button" name="delete" value="{xen:phrase tinhte_xentag_tag_delete}"
			accesskey="d" class="button OverlayTrigger"
			data-href="{xen:adminlink 'xentag-tags/delete', $tag}"
			{xen:if '!{$tag.tag_id}', 'style="display: none"'}
		/>
	</xen:submitunit>
	
	<input type="hidden" name="tag_id" value="{$tag.tag_id}" />
</xen:form>]]></template>
    <template title="tinhte_xentag_tag_list"><![CDATA[<xen:title>{xen:phrase tinhte_xentag_tag}</xen:title>

<xen:topctrl>
	<a href="{xen:adminlink 'xentag-tags/add'}" class="button" accesskey="a">+ {xen:phrase tinhte_xentag_tag_add}</a>
</xen:topctrl>

<xen:require css="filter_list.css" />
<xen:require js="js/xenforo/filter_list.js" />

<xen:form action="{xen:adminlink 'xentag-tags'}" class="section">
	<xen:if is="{$allTag}">
		<h2 class="subHeading">
			<link rel="xenforo_template" type="text/html" href="filter_list_controls.html" />
			{xen:phrase tinhte_xentag_tag}
		</h2>
	
		<ol class="FilterList Scrollable">
			<xen:foreach loop="$allTag" value="$tag">
				<xen:listitem
					id="{$tag.tag_id}"
					href="{xen:adminlink 'xentag-tags/edit', $tag}"
					label="{$tag.tag_text}"
					delete="{xen:adminlink 'xentag-tags/delete', $tag}" />
			</xen:foreach>
		</ol>
	
		<p class="sectionFooter">{xen:phrase showing_x_of_y_items, 'count=<span class="FilterListCount">{xen:count $allTag}</span>', 'total={xen:count $allTag}'}</p>
	<xen:else />
		<div class="noResults">{xen:phrase tinhte_xentag_tag_no_results}</div>
	</xen:if>
</xen:form>]]></template>
